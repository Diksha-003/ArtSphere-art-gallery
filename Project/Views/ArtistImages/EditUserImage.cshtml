@model Project.Models.ArtistImage

<h2>Edit User Image</h2>

<form asp-action="EditUserImage" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ImageDescription"></label>
        <input asp-for="ImageDescription" class="form-control" />
        <span asp-validation-for="ImageDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFilePath"></label>
        <input asp-for="ImageFilePath" class="form-control" />
        <span asp-validation-for="ImageFilePath" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="UserImages" class="btn btn-secondary">Cancel</a>
</form>
